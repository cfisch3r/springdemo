<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">


	<on-start>
		<evaluate expression="assetMappingService.fetchAssetMappings()"
			result="flowScope.assetMappings" />
	</on-start>
	<view-state id="assetmapping">
		<var name="newAssetMapping" class="de.fisch3r.springdemo.jsf.domain.AssetMapping" />
		<var name="assetMappingTableController" class="de.fisch3r.springdemo.jsf.controller.AssetMappingTableController" />
		<transition on="addNewAssetMapping" to="assetmapping">
			<evaluate expression="flowScope.assetMappings.add(newAssetMapping)" />
		</transition>
		<transition on="removeAssetMapping" to="assetmapping">
			<evaluate expression="assetMappings.remove(assetMappingTableController.selectedAssetMapping)" />
		</transition>
	</view-state>

</flow>